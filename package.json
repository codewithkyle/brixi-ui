{
    "name": "brixi-ui",
    "version": "0.3.0",
    "homepage": "https://ui.brixi.dev/",
    "description": "A sleek & slender design system built on web components.",
    "author": "Kyle Andrews <codingwithkyle@gmail.com>",
    "license": "MIT",
    "files": [
        "dist",
        "install.js",
        "LICENSE",
        "package.json",
        "package-lock.json"
    ],
    "bin": {
        "install-ui": "./install.js"
    },
    "engines": {
        "node": ">=14.5.0"
    },
    "scripts": {
        "create": "node ./build/generator.js",
        "preview": "node ./server.js",
        "test": "npm run build && npm run preview",
        "bundle": "node ./build/bundle.js",
        "brixi": "brixi && mv ./brixi/brixi.css ./src/framework/stylesheets/brixi.css && rmdir ./brixi",
        "lint": "run-p lint:*",
        "lint:prettier": "prettier --write \"./src/**/*.ts\" && prettier --write \"./src/**/*.scss\"",
        "lint:tsc": "tsc",
        "lint:types": "node ./build/types.js",
        "build": "run-s build:*",
        "build:js": "twist --src=./src --outdir=./test/js",
        "build:css": "cssmonster",
        "watch": "run-p watch:*",
        "watch:src": "npm-watch",
        "watch:server": "node ./server",
        "prerelease": "rm -rf ./dist && mkdir ./dist && npm run bundle && npm run brixi && run-s make:* && npm run build && npm run lint",
        "make:src": "mkdir ./dist/framework && cp -r ./src/framework/* ./dist/framework",
        "make:audio": "cp -r ./audio ./dist/audio",
        "wrangle": "asset-manager",
        "prepare": "husky install",
        "deploy": "run-s deploy:*",
        "deploy:pre": "npm run prerelease",
        "deploy:wrange": "npm run wrangle",
        "deploy:claim": "ssh ubuntu@192.168.1.104 sudo chown -R ubuntu:ubuntu /var/www/brixi-ui",
        "deploy:deploy": "rsync -azh --delete-after -e \"ssh -o StrictHostKeyChecking=no\" ./ ubuntu@192.168.1.104:/var/www/brixi-ui/",
        "deploy:reboot": "ssh ubuntu@192.168.1.104 /home/ubuntu/.nvm/versions/node/v16.13.1/bin/pm2 restart 0"
    },
    "dependencies": {
        "fs-extra": "^10.0.0",
        "yargs": "^17.3.0"
    },
    "bundle": [
        "@codewithkyle/notifyjs",
        "@codewithkyle/supercomponent",
        "@codewithkyle/router",
        "@codewithkyle/messaging",
        "@codewithkyle/modal-maker",
        "@codewithkyle/pubsub",
        "@codewithkyle/uuid",
        "tooltipper",
        "flatpickr",
        "lit-html",
        "lit-html/directives/unsafe-html",
        "dayjs",
        "fuse.js/dist/fuse.basic.esm.js"
    ],
    "devDependencies": {
        "@codewithkyle/asset-manager": "^1.0.2",
        "@codewithkyle/messaging": "^1.0.0",
        "@codewithkyle/modal-maker": "^1.1.1",
        "@codewithkyle/notifyjs": "^3.1.0",
        "@codewithkyle/pubsub": "^1.1.1",
        "@codewithkyle/router": "^1.1.0",
        "@codewithkyle/supercomponent": "^1.3.0",
        "@codewithkyle/twist": "^1.5.0",
        "@codewithkyle/uuid": "^1.0.1",
        "brixi": "^0.6.1",
        "cssmonster": "^0.4.0",
        "dayjs": "^1.10.6",
        "esinstall": "^1.1.7",
        "express": "^4.17.2",
        "flatpickr": "^4.6.9",
        "fuse.js": "^6.4.6",
        "glob": "^7.1.7",
        "husky": "^6.0.0",
        "inquirer": "^8.1.1",
        "lit-html": "^1.4.1",
        "npm-run-all": "^4.1.5",
        "npm-watch": "^0.9.0",
        "prettier": "^2.5.1",
        "tooltipper": "^1.1.2",
        "typescript": "^4.5.4"
    },
    "watch": {
        "build": {
            "patterns": [
                "src"
            ],
            "extensions": "ts,js,scss,css,tsx,jsx,mjs,cjs",
            "quiet": false
        }
    }
}
