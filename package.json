{
    "name": "brixi-ui",
    "version": "0.8.0",
    "homepage": "https://ui.brixi.dev/",
    "description": "A sleek & slender design system built on web components.",
    "author": "Kyle Andrews <codingwithkyle@gmail.com>",
    "license": "MIT",
    "files": [
        "dist",
        "install.js",
        "LICENSE",
        "package.json",
        "package-lock.json"
    ],
    "bin": {
        "install-ui": "./install.js"
    },
    "engines": {
        "node": ">=14.5.0"
    },
    "types": "./dist/framework/types",
    "scripts": {
        "create": "node ./build/generator.js",
        "preview": "serve ./public",
        "test": "npm run build && npm run preview",
        "bundle": "node ./build/bundle.js",
        "brixi": "brixi && mv ./brixi/brixi.css ./src/framework/stylesheets/brixi.css && rmdir ./brixi",
        "lint": "run-s lint:*",
        "lint:prettier": "prettier --write \"./src/**/*.ts\" && prettier --write \"./src/**/*.scss\"",
        "lint:tsc": "tsc",
        "lint:types": "node ./build/types.js",
        "build": "run-s build:*",
        "build:nav": "node ./build/navigation-generator.js",
        "build:js": "twist --src=./src --outdir=./public/js --type=esbuild",
        "build:css": "cssmonster",
        "watch": "run-p watch:*",
        "watch:src": "npm-watch",
        "watch:server": "npm run preview",
        "prerelease": "rm -rf ./dist && mkdir ./dist && mkdir ./dist/framework && npm run lint && run-s make:* && rm -rf ./dist/framework/lib && rm ./dist/framework/stylesheets/brixi.css",
        "make:src": "cp -r ./src/framework/* ./dist/framework",
        "make:audio": "cp -r ./audio ./dist/audio",
        "prepare": "husky install",
        "deploy": "run-s deploy:*",
        "deploy:bundle": "npm run bundle",
        "deploy:build": "npm run build",
        "deploy:audio": "cp -r ./audio ./public/audio",
        "deploy:iframes": "node ./build/iframe-generator.js",
        "deploy:docs": "node ./build/documentation-generator.js",
        "deploy:raw": "node ./build/raw-generator.js",
        "deploy:nav": "node ./build/navigation-generator.js",
        "deploy:cachebust": "asset-manager",
        "deploy:site": "node ./build/deploy.js",
        "deploy:zip": "node ./build/zip.js && mv ./brixi-ui.zip ./public/static"
    },
    "dependencies": {
        "fs-extra": "^10.0.0",
        "yargs": "^17.3.1"
    },
    "bundle": [
        "@codewithkyle/notifyjs/notifications",
        "@codewithkyle/notifyjs/toaster",
        "@codewithkyle/notifyjs/snackbar",
        "@codewithkyle/supercomponent",
        "@codewithkyle/router",
        "@codewithkyle/messaging",
        "@codewithkyle/pubsub",
        "@codewithkyle/uuid",
        "tooltipper",
        "flatpickr",
        "lit-html",
        "lit-html/directives/unsafe-html.js",
        "dayjs",
        {
            "in": "fuse.js/dist/fuse.basic.esm.js",
            "out": "fuse.js"
        },
        "sortablejs"
    ],
    "devDependencies": {
        "@codewithkyle/asset-manager": "1.x",
        "@codewithkyle/messaging": "1.x",
        "@codewithkyle/notifyjs": "^4.0.0",
        "@codewithkyle/pubsub": "1.x",
        "@codewithkyle/router": "1.x",
        "@codewithkyle/supercomponent": "1.x",
        "@codewithkyle/twist": "^2.0.2",
        "@codewithkyle/uuid": "1.x",
        "archiver": "^5.3.1",
        "brixi": "^0.7.0",
        "cssmonster": "^0.7.2",
        "dayjs": "1.x",
        "esbuild": "^0.14.39",
        "esinstall": "^1.1.7",
        "express": "^4.17.2",
        "flatpickr": "4.x",
        "fuse.js": "6.x",
        "gh-pages": "^3.2.3",
        "glob": "^7.1.7",
        "husky": "^6.0.0",
        "inquirer": "^8.1.1",
        "lit-html": "^2.3.1",
        "npm-run-all": "^4.1.5",
        "npm-watch": "^0.9.0",
        "prettier": "^2.5.1",
        "sass": "^1.45.1",
        "serve": "^13.0.2",
        "sortablejs": "^1.15.0",
        "tooltipper": "1.x",
        "typescript": "^4.5.4"
    },
    "peerDependencies": {
        "@codewithkyle/notifyjs": "4.x",
        "@codewithkyle/pubsub": "1.x",
        "@codewithkyle/supercomponent": "1.x",
        "@codewithkyle/uuid": "1.x",
        "brixi": "0.6.x",
        "dayjs": "1.x",
        "flatpickr": "4.x",
        "fuse.js": "6.x",
        "lit-html": "2.x",
        "sortablejs": "1.x",
        "tooltipper": "1.x"
    },
    "watch": {
        "build": {
            "patterns": [
                "src"
            ],
            "extensions": "ts,js,scss,css,tsx,jsx,mjs,cjs",
            "quiet": false
        },
        "deploy:iframes": {
            "patterns": [
                "src"
            ],
            "extensions": "html",
            "quiet": false
        }
    }
}
