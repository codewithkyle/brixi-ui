{
    "name": "brixi-ui",
    "version": "0.4.1",
    "homepage": "https://ui.brixi.dev/",
    "description": "A sleek & slender design system built on web components.",
    "author": "Kyle Andrews <codingwithkyle@gmail.com>",
    "license": "MIT",
    "files": [
        "dist",
        "install.js",
        "LICENSE",
        "package.json",
        "package-lock.json"
    ],
    "bin": {
        "install-ui": "./install.js"
    },
    "engines": {
        "node": ">=14.5.0"
    },
    "types": "./dist/framework/types",
    "scripts": {
        "create": "node ./build/generator.js",
        "preview": "node ./server.js",
        "test": "npm run build && npm run preview",
        "bundle": "node ./build/bundle.js",
        "brixi": "brixi && mv ./brixi/brixi.css ./src/framework/stylesheets/brixi.css && rmdir ./brixi",
        "lint": "run-s lint:*",
        "lint:prettier": "prettier --write \"./src/**/*.ts\" && prettier --write \"./src/**/*.scss\"",
        "lint:tsc": "tsc",
        "lint:types": "node ./build/types.js",
        "build": "run-s build:*",
        "build:js": "twist --src=./src --outdir=./test/js",
        "build:css": "cssmonster",
        "watch": "run-p watch:*",
        "watch:src": "npm-watch",
        "watch:server": "node ./server",
        "prerelease": "rm -rf ./dist && mkdir ./dist && mkdir ./dist/framework && npm run lint && run-s make:* && rm -rf ./dist/framework/lib && rm ./dist/framework/stylesheets/brixi.css",
        "make:src": "cp -r ./src/framework/* ./dist/framework",
        "make:audio": "cp -r ./audio ./dist/audio",
        "wrangle": "asset-manager",
        "prepare": "husky install"
    },
    "dependencies": {
        "fs-extra": "^10.0.0",
        "yargs": "^17.3.1"
    },
    "bundle": [
        "@codewithkyle/notifyjs",
        "@codewithkyle/supercomponent",
        "@codewithkyle/router",
        "@codewithkyle/messaging",
        "@codewithkyle/modal-maker",
        "@codewithkyle/pubsub",
        "@codewithkyle/uuid",
        "tooltipper",
        "flatpickr",
        "lit-html",
        "lit-html/directives/unsafe-html",
        "dayjs",
        "fuse.js/dist/fuse.basic.esm.js"
    ],
    "devDependencies": {
        "@codewithkyle/twist": "^1.5.1",
        "cssmonster": "^0.5.0",
        "esinstall": "^1.1.7",
        "express": "^4.17.2",
        "glob": "^7.1.7",
        "husky": "^6.0.0",
        "inquirer": "^8.1.1",
        "npm-run-all": "^4.1.5",
        "npm-watch": "^0.9.0",
        "prettier": "^2.5.1",
        "sass": "^1.45.1",
        "typescript": "^4.5.4",
        "flatpickr": "4.x",
        "fuse.js": "6.x",
        "tooltipper": "1.x",
        "@codewithkyle/asset-manager": "1.x",
        "@codewithkyle/messaging": "1.x",
        "@codewithkyle/modal-maker": "1.x",
        "@codewithkyle/notifyjs": "3.x",
        "@codewithkyle/pubsub": "1.x",
        "@codewithkyle/router": "1.x",
        "@codewithkyle/supercomponent": "1.x",
        "@codewithkyle/uuid": "1.x",
        "brixi": "0.6.x",
        "dayjs": "1.x",
        "lit-html": "1.x"
    },
    "peerDependencies": {
        "flatpickr": "4.x",
        "fuse.js": "6.x",
        "tooltipper": "1.x",
        "@codewithkyle/messaging": "1.x",
        "@codewithkyle/modal-maker": "1.x",
        "@codewithkyle/notifyjs": "3.x",
        "@codewithkyle/pubsub": "1.x",
        "@codewithkyle/router": "1.x",
        "@codewithkyle/supercomponent": "1.x",
        "@codewithkyle/uuid": "1.x",
        "brixi": "0.6.x",
        "dayjs": "1.x",
        "lit-html": "1.x"
    },
    "watch": {
        "build": {
            "patterns": [
                "src"
            ],
            "extensions": "ts,js,scss,css,tsx,jsx,mjs,cjs",
            "quiet": false
        }
    }
}
