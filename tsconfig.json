{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["DOM", "ES2020"],
        "allowJs": true,
        "checkJs": false,
        "module": "ES2020",
        "moduleResolution": "Node",
        "baseUrl": "src/framework",
        "paths": {
            "~controllers/*": ["controllers/*"],
            "~lib/*": ["lib/*"],
            "~components/*": ["components/*"],
            "~utils/*": ["utils/*"],
            "~types/*": ["types/*"]
        },
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "_types",
    },
    "include": [
        "src",
    ]
}